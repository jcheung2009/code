ff = load_batchf('batch_sal');
load('analysis/data_structures/naspmvolumelatency');
repsal = struct();

trialcnt = 0;
for i = 1:2:length(ff)
    trialcnt = trialcnt+1;
    load(['analysis/data_structures/fv_repD_',ff(i).name]);
    load(['analysis/data_structures/fv_repD_',ff(i+1).name]);
    
    if ~isempty(strfind(ff(i+1).name,'naspm'))
            mcolor = 'r';
            mrk = 'ro';
    elseif ~isempty(strfind(ff(i+1).name,'iem'))
        mcolor = 'm';
        mrk = 'mo';
    elseif ~isempty(strfind(ff(i+1).name,'APV'))
         mcolor = 'b';
         mrk = 'bo';
    else
        mcolor = 'k';
        mrk = 'ko';
    end
     
    rep1 = ['fv_repD_',ff(i).name];
    rep2 = ['fv_repD_',ff(i+1).name];
    
    if ~isempty(strfind(ff(i+1).name,'sal'))
        startpt = '';
    else
        drugtime = naspmvolumelatency.(['tr_',ff(i+1).name]).treattime;
        startpt = (drugtime+0.63)*3600;
    end
        
    [repsal(trialcnt).rep repsal(trialcnt).sdur ...
        repsal(trialcnt).gdur repsal(trialcnt).acorr] = jc_plotrepeatsummary(...
        eval(rep1),eval(rep2),mrk,mcolor,1.5,0,startpt,'','n',25);
%     jc_plotrepeatsummary2(...
%         eval(rep1),eval(rep2),'ok','k',0.5);
end
