function [seqcnstrct] = make_defined_seq_stats_not_mat(seqs,prbs,lng)

seqcnstrct =[];
for i =1:lng
    if sum(diff(prbs)) ==0
        
    else
        [v,idx] = sort(prbs,'descend');
        [idxs] = find(cumsum(v) >= rand(1));
        if isempty(idxs)
            crntseq =seqs{idx(1)};
        else
            crntseq = seqs{idx};
        end
    end
    seqcnstrct = [seqcnstrct crntseq];
end
