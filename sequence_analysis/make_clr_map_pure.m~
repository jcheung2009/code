function [clrmap] = make_clr_map_pure(nclrs)


clrspan = linspace(.1,1,ceil((nclrs-1)/3));

semiclrs = linspace(0,.3

for i = 1:length(clrspan)
blues(i,:) = [clrspan(i) 0 0];
end

for i = 1:length(clrspan)
reds(i,:) = [0 clrspan(i) 0];
end
for i = 1:length(clrspan)
greens(i,:) = [0 0 clrspan(i)];
end

clrmap  = [0 0 0; blues; reds; greens];
